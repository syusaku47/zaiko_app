


<body>
    <div class="singleinbox">
        <div class="new-top-wrapper">
          <div class="container">
            <h1>編集</h1>

        </div><!--top-wrapper-->

        <div class="main edit">
          <div class="container">
            <ul class= "edit menu">
              <li>項目</li>
              <li>個数</li>
            </ul>

            <%= form_tag("/stock/update")do %>
              <form>
                <% @stocks.each do |stock| %>
                  <ul class= "edit item">  
                    <li><input type="text" name="name[]" value= "<%= stock.content %>"></li>
                    <li><input type="number" name="number[]" value="<%= stock.stock_number%>"></li>
                  </ul> 
                <% end %>
                <input class= "btn submit" type= "submit" value= "保存"> 
              </form>
            <%end%>
          </div>
          </div><!--container-->
        </div> <!--main -->
    </div><!--singleinbox -->
  </body>
