<!DOCTYPE html>
<html>
  <head>
    <title>zaiko_app</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

      <header>
        <div class="container">
          <div class="header-left">         
            <% if @current_user %>
              <a class="link" href="/stocks/index">お家在庫君TOP</a>
            <% else %>
              <a class="link" href="/">TOP</a>
            <% end %>
          </div>
          <span class="fa fa-bars menu-icon" id="hoge"></span>


          <div class="header-right">
            <%if @current_user%>
              <%link_to(@current_user.name,"/users/#{@current_user.id}/info")%>
              <%= link_to("ログアウト","/logout",{method: :post})%>
              <a class="link" href="/home/howto">使用方法</a>
              <a class="link" href="/stocks/index">在庫一覧</a>
              <a class="link" href="/stocks/new">新規作成</a>
              <%= link_to(@current_user.name,"/users/#{@current_user.id}/info")%>
            <%else%>
            <a class="link" href="/home/about">about</a>
            <a class="link" href="/home/howto">使用方法</a>
            <a class="link" href="/users/new">アカウント作成</a>
            <a class="link" href="login">ログイン</a>
          <%end%>
          </div>
        </div>
      </header>
      <!--------------モーダル----------------------->
      <div class="menu">
        <div class="menu-modal-wrapper off" id="menu-modal">
            <div class="menu-list">
              <h2>MENU</h2>
              <ul>
              <%if @current_user%>
              <%link_to(@current_user.name,"/users/#{@current_user.id}/info")%>
              <%= link_to("ログアウト","/logout",{method: :post}) %>
              <li><a class="link" href="/home/howto">使用方法</a></li>
              <li><a class="link" href="/stocks/index">在庫一覧</a></li>
              <li><a class="link" href="/stocks/new">新規作成</a></li>
            <%else%>
            <li><a class="link" href="/login">ログイン</a></li>
            <li><a class="link" href="/users/new">アカウント作成</a></li>
            <li><a class="link" href="/home/howto">使用方法</a></li>
            <li><a class="link" href="/home/about">about</a></li>
          <%end%>
              </ul>
            </div>
        </div>
      </div>
      
      <% if flash[:notice] %>
        <div class= "flash">
          <p><%=flash[:notice]%></p>
        </div>
      <% end %>
      
    <%= yield %>

    <footer>
      <div class="container">
        <div class="footer-logo">
          <p>ZAIKO</p>
          <div class="btn-wrapper">
            <a class="btn instagram" href="#"><span class="fab fa-instagram"></span> instagram</a>
            <a class="btn facebook"href="#"><span class="fab fa-facebook"></span>Facebook</a>
            <a class="btn twitter"href="https://twitter.com/Syuuu03809642"><span class="fab fa-twitter"></span> Twitter</a>
          </div>
        </div>

      </div>
    </footer>
  </body>
</html>
