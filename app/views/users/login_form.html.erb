<body>
    <div class="singleinbox">
        <div class="container">
        <h1 class= "login-heading">ログイン</h1>
            <div class="form">
                <div class= "form-body">
                    <%= form_tag("/login")do %>
                        <% if @error_message%>
                            <div class="form-error">
                                <p><%= @error_message %></p>
                            </div>
                        <%end%>
                        <li><p>メールアドレス</p></li>
                        <li><input class="login-input" name="email" value="<%= @email%>"></li>
                        <li><p>パスワード</p> </li>
                        <li><input class="login-input" type="password" name="password" value="<%= @password%>"></li>
                        <li><input class= "btn submit login-input" type= "submit" value= "ログイン"> </li>
                    <%end%>
                </div><!--form-body-->
            </div> <!--form -->
        </div><!--container-->
    </div><!--singleinbox -->
</body>
